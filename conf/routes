# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Users
GET     /users/user                             UserController.signUp

# Knowledges
GET     /knowledges                             KnowledgeController.showKnowledges
GET     /knowledges/knowledge/{knowledgeId}     KnowledgeController.showKnowledge
GET     /knowledges/knowledge                   KnowledgeController.createKnowledge

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
